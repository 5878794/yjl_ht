doctype html
html
    head
        title 创建新订单
        include ./../../pug_include/head_pc

        script(data-src='o_add_order_room.min.js?t='+tt)
        style.
            body,html{overflow:auto;}


    body

        div(class='openWin_main' id='form')

            b-order-info(id='order_info' class='b_order_info')

            div
                b-title(name='房抵信息')
                div(class='openWin_input_main box_slt box_lines')
                    div(class='openWin_input_item1')
                        b-input(id='purpose' type='text' err='不能为空' rule='must' name='借款用途')


            div
                b-title(name='主要抵押物信息')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input(type='text' err='不能为空' rule='must' id='mainMortgagePropertyRight_name' name='名称')
                    div(class='openWin_input_item3')
                        b-input(type='text' err='不能为空' rule='must' id='mainMortgagePropertyRight_idCard' name='产权证号')
                    div(class='openWin_input_item3')
                        b-input-money(type='text' err='不能为空' rule='must' id='mainMortgagePropertyRight_area' name='面积' unit='㎡')
                    div(class='openWin_input_item3')
                        b-input(type='select' err='不能为空' rule='must' id='mainMortgagePropertyRight_type' data-bind='residentialNature' name='住宅性质')
                    div(class='openWin_input_item3')
                        b-input-date(type='date' rule='must' id='mainMortgagePropertyRight_getTime' err='不能为空' name='取得时间')
                    div(class='openWin_input_item3 hidden')
                        b-input(type='text' id='mainMortgagePropertyRight_category' value='0')



            div
                b-title(name='附抵押物信息' id='additional_mortgage' bind-group1='additionalMortgagePropertyRightList1' bind-group2='additionalMortgagePropertyRightList2')
                div(id='additional_mortgage_body')


            div
                b-title(name='评估信息')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input-money(name='评估总价' id='orderMortgageExtendAssessment_evaluationPrice' accuracy='2' rule='must' err='不能为空' unit='万元')
                    //div(class='openWin_input_item1')
                    //    b-input-file(class='__input_file__' type='file' id='orderMortgageExtendAssessment_attachUrls' name='快销总价' unit='(非必填附件)')
                    //div(class='openWin_input_item1')
                    //    b-input-file(class='__input_file__' type='file' id='orderMortgageExtendAssessment_mortgageReportUrls' name='评估报告' unit='(非必填附件)')

            div
                b-title(name='放款信息' id='')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input(id='orderClientBankAccount_bankName' err='不能为空' rule='must' type='text' name='放款户名')
                    div(class='openWin_input_item3')
                        b-input(id='orderClientBankAccount_bankNo' err='不能为空' rule='must' type='text' name='放款账号')
                    div(class='openWin_input_item3')
                        b-input(id='orderClientBankAccount_openBank' err='不能为空' rule='must' type='text' name='开户行')


            div
                b-title(name='费用信息')
                div(class='openWin_input_main box_hlt box_lines' style='background:rgb(250,243,230)')
                    div(class='openWin_input_item3')
                        b-input-money(id='orderRateInfo_period' accuracy='0' xs='0' name='用款时间' unit='期(30天/期)' err='不能为空' rule='must')
                    div(class='openWin_input_item3')
                        b-input-money(id='orderRateInfo_consultationRate' accuracy='5' name='咨询费率' unit='%/日' disabled='disabled' xs='5')
                    div(class='openWin_input_item3')
                        b-input-money(id='orderRateInfo_consultationFee' accuracy='2' name='咨询费用' unit='元' disabled='disabled')
                    div(class='openWin_input_item3')
                        b-input-money(id='orderRateInfo_warrantFee' accuracy='2' name='权证费' unit='元' err='不能为空' rule='must')
                    div(class='openWin_input_item3')
                        b-input-money(id='orderRateInfo_overdueRate' accuracy='5' name='逾期费率' unit='%/日' disabled='disabled' xs='5')
                    div(class='openWin_input_item3')

                    div(class='openWin_input_item3')
                        b-input-money(id='orderRateInfo_preferentialFee' accuracy='2' name='优惠费用' unit='元' err='不能为空' rule='must')
                    div(class='openWin_input_item3')
                        b-input-money(id='orderRateInfo_totalCost' accuracy='2' name='费用合计' unit='元' disabled='disabled')


            div
                b-title(name='备注')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item1')
                        b-input(id='remark' type='textarea' autoHeight='true' name='' style='padding-left:20px;' err='不能为空' rule='must')



            div(class='openWin_btns box_hcc')
                div(class='openWin_btn_gray box_hcc hover' id='pre') 上一步
                div(class='openWin_btn_blue box_hcc hover' id='next') 下一步












        //克隆部分=====================================================
        div(class='hidden')
            //抵押信息
            div(id='mortgage_info_item'  group_1='orderMortgageExtendMortgageList')
                b-title1(name='抵押' nameStyle='color:rgb(83,83,83);font-weight: normal;')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input-date(key_1='mortgageTime' type='date' err='不能为空' rule='must' name='抵押时间')
                    div(class='openWin_input_item3')
                        b-input(key_1='mortgageCount' type='text' err='不能为空' rule='must' name='抵押次数')
                    div(class='openWin_input_item3')
                        b-input(key_1='mortgagee' type='text' err='不能为空' rule='must' name='抵押权人')
                    div(class='openWin_input_item3')
                        b-input-money(key_1='loanPrice' accuracy='2' err='不能为空' rule='must' name='原贷贷款' unit='万元')
                    div(class='openWin_input_item3')
                        b-input-money(key_1='mortgagePrice' accuracy='5' err='不能为空' rule='must' name='抵押余额' unit='万元')
                    div(class='openWin_input_item1')
                        b-input-file(key_1='attachUrls' type='file' err='不能为空' rule='must' name='抵押附件')



            div(id='additional_mortgage_item1' group='additionalMortgagePropertyRightList1')
                b-title1(name='不动产' style='display:block;background:#efefef;')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input(key='name' type='text' name='名称' err='不能为空' rule='must')
                    div(class='openWin_input_item3')
                        b-input(key='idCard' type='text' name='产权证号' err='不能为空' rule='must')
                    div(class='openWin_input_item3')
                        b-input-money(key='area' type='text' name='面积' unit='㎡' err='不能为空' rule='must' )
                    div(class='openWin_input_item3')
                        b-input(key='type' type='select' name='住宅性质' data-bind='residentialNature' err='不能为空' rule='must')
                    div(class='openWin_input_item3')
                        b-input-date(key='getTime' type='date' name='取得时间' err='不能为空' rule='must')
                    div(class='openWin_input_item3 hidden')
                        b-input(key='category' type='text' value='1')

                b-title1(name='抵押信息' class='mortgage_info1_')
                div(class='mortgage_info_body1_' )


            div(id='additional_mortgage_item2' group='additionalMortgagePropertyRightList2')
                b-title1(name='动产' style='display:block;background:#efefef;')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input(key='name' type='text' name='名称' err='不能为空' rule='must')
                    div(class='openWin_input_item3')
                        b-input-money(key='percent' name='权益' unit='%' err='不能为空' rule='must' xs='5' accuracy='5')
                    div(class='openWin_input_item3')
                        b-input-money(key='evaluationValue' name='评估价值' accuracy='5' unit='万元' err='不能为空' rule='must')
                    div(class='openWin_input_item3 hidden')
                        b-input(key='category' type='text' value='2')
