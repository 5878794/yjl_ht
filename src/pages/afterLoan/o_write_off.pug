doctype html
html
    head
        title 核销
        include ./../../pug_include/head_pc

        script(data-src='o_write_off.min.js?t='+tt)
        style.
            body,html{overflow:auto;}


    body

        div(class='openWin_main autoWidth')
            div(id='form')
                b-title(name='核销')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input-money(id='remainInterest' name='剩余本金' disabled='disabled' accuracy='2')
                    div(class='openWin_input_item3')
                        b-input-money(id='remainPrincipal' name='剩余利息' disabled='disabled' accuracy='2')
                    div(class='openWin_input_item3')
                        b-input-money(id='disburseMoney' name='贷后支出' disabled='disabled' accuracy='2')
                    div(class='openWin_input_item3')
                        b-input-money(id='heXiaoInterest' name='核销利息' accuracy='2' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input-money(id='heXiaoPrincipal' name='核销本金' accuracy='2' rule='must' err='不能为空')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3 warrant_pay_back box_hlc')
                        div 核销后损益
                        p(id='sy') 0.00000



            div(class='openWin_btns box_hcc')
                div(class='openWin_btn_gray box_hcc hover' id='cancel') 取消
                div(class='openWin_btn_blue box_hcc hover' id='submit') 提交
