doctype html
html
    head
        title 变更客户资料
        include ./../../pug_include/head_pc

        script(data-src='o_mdf_user_info.min.js?t='+tt)
        style.
            body,html{overflow:auto;}


    body

        div(class='openWin_main autoWidth')
            div
                b-title(name='变更客户资料')
                div(class='openWin_input_main box_hlt box_lines' id='form')
                    div(class='openWin_input_item1')
                        b-input(type='text' name='电话号码' id='mobile' rule='must,phone' err='不能为空')
                    div(class='openWin_input_item1')
                        b-input(type='text' name='住址' id='address' rule='must' err='不能为空')
                    div(class='openWin_input_item1')
                        b-input(type='text' name='紧急联系人' id='urgentName' rule='must' err='不能为空')
                    div(class='openWin_input_item1')
                        b-input(type='text' name='紧急联系人<br/>电话号码' id='urgentMobile' rule='must,phone' err='不能为空')


            div(class='openWin_btns box_hcc')
                div(class='openWin_btn_gray box_hcc hover' id='cancel') 取消
                div(class='openWin_btn_blue box_hcc hover' id='submit') 提交
