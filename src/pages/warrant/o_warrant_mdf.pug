doctype html
html
    head
        title 核行修改
        include ./../../pug_include/head_pc

        script(data-src='o_warrant_mdf.min.js?t='+tt)
        style.
            body,html{overflow:auto;}


    body

        div(class='openWin_main' id='form')

            b-title(name='还款信息')
            div(class='openWin_input_main box_hlt box_lines')
                div(class='openWin_input_item3')
                    b-input(id='orderRepayment_repaymentTarget' type='text' name='还款对象'  rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderRepayment_contactPerson' type='text' name='联系人' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderRepayment_contactMobile' type='text' name='联系电话' rule='must,phone' err='请输入11位手机号')
                div(class='openWin_input_item3')
                    b-input(id='orderRepayment_bankName' type='text' name='还款户名' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderRepayment_bankNo' type='text' name='还款账号' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderRepayment_openBank' type='text' name='开户行' rule='must' err='不能为空')


            b-title(name='回款信息')
            div(class='openWin_input_main box_hlt box_lines')
                div(class='openWin_input_item3')
                    b-input(id='orderReturnRepayment_returnTarget' type='text' name='回款对象' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderReturnRepayment_contactPerson' type='text' name='联系人' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderReturnRepayment_contactMobile' type='text' name='联系电话' rule='must,phone' err='请输入11位手机号')
                div(class='openWin_input_item3')
                    b-input-money(id='orderReturnRepayment_replyMoney' type='text' accuracy='2' name='批复金额' unit='元' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderReturnRepayment_bankNo' type='text' name='回款账号' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderReturnRepayment_openBank' type='text' name='开户行' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderReturnRepayment_bankName' type='text' name='回款户名' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input-money(id='orderReturnRepayment_returnMoney' type='text' accuracy='2' name='回款金额' unit='元' rule='must' err='不能为空')
                div(class='openWin_input_item3')
                    b-input(id='orderReturnRepayment_returnModeType' type='select' data-bind='payBackMethod' name='回款方式' rule='must' err='不能为空')


            //- 非垫资 无银行监管
            div(id='fdz_not')
                b-title(name='银行监管')
                b-title1(name='买家')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input(id='buyerBankSupervision_supervisionBank' type='text' name='监督银行' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input-money(id='buyerBankSupervision_supervisionMoney' type='text' name='监督金额' accuracy='2' unit='元' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(id='buyerBankSupervision_bankNo' type='text' name='监督账号' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(id='buyerBankSupervision_bankName' type='text' name='户名' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(id='buyerBankSupervision_openBank' type='text' name='开户行' rule='must' err='不能为空')
                    div(class='openWin_input_item3 hidden')
                        b-input(id='buyerBankSupervision_type' type='text' value='0')


                b-title1(name='卖家')
                div(class='openWin_input_main box_hlt box_lines')
                    div(class='openWin_input_item3')
                        b-input(id='sellerBankSupervision_supervisionBank' type='text' name='监督银行' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input-money(id='sellerBankSupervision_supervisionMoney' type='text' name='监督金额' accuracy='2' unit='元' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(id='sellerBankSupervision_bankNo' type='text' name='监督账号' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(id='sellerBankSupervision_bankName' type='text' name='户名' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(id='sellerBankSupervision_openBank' type='text' name='开户行' rule='must' err='不能为空')
                    div(class='openWin_input_item3 hidden')
                        b-input(id='sellerBankSupervision_type' type='text' value='1')



            div(class='openWin_btns box_hcc')
                div(class='openWin_btn_gray box_hcc hover' id='cancel') 取消
                div(class='openWin_btn_blue box_hcc hover' id='submit') 提交
