doctype html
html
    head
        title 订单基本信息
        include ./../../pug_include/head_pc

        script(data-src='o_approve_room.min.js?t='+tt)
        style.
            body,html{overflow:auto;}


    body

        div(class='openWin_main' id='form')

            b-order-info(id='order_info' class='b_order_info')

            b-title(name='历史流程')
            b-order-history(id='history' showOne='true' sort='desc')

            br

            b-title(name='评估信息')
            div(class='openWin_input_main box_hlt box_lines')
                div(class='openWin_input_item3')
                    b-input-money(name='评估总价' id='orderMortgageExtendAssessment_evaluationPrice' accuracy='2' rule='must' err='不能为空' unit='万元')
                div(class='openWin_input_item1')
                    b-input-file(class='__input_file__' type='file' id='orderMortgageExtendAssessment_attachUrls' name='快销总价' rule='must' err='不能为空')
                div(class='openWin_input_item1')
                    b-input-file(class='__input_file__' type='file' id='orderMortgageExtendAssessment_mortgageReportUrls' name='评估报告' rule='must' err='不能为空')

            b-title(name='其它信息')
            div(class='openWin_input_main box_hlt box_lines' id='choose_product')
                div(class='openWin_input_item2')
                    b-input(type='select' err='请选择' rule='must' id='organizationId' name='机构' data-bind='agencyFrom' data-child='productId')
                div(class='openWin_input_item2')
                    b-input(type='select' err='请选择' id='productId' rule='must' name='产品' data-bind='productList')
                div(class='openWin_input_item2')

                div(class='openWin_input_item2 box_slc hidden' id='productInfo')
                    div(class='box_hlc approve_room')
                        p 最高额度(
                        span
                        p ),最小额度(
                        span
                        p ),可申请时间
                        span
                        p 天)
                    div(class='box_hlc approve_room')
                        p 成本利率(
                        span
                        p %/日),成本服务费率(
                        span
                        p %)




            div(class='openWin_input_main box_hlt box_lines')
                div(class='openWin_input_item1')
                    b-input(type='textarea' autoHeight='true' id='auditOpinion' name='意见' placeholder='非必填')
                div(class='openWin_input_item1')
                    b-input-file(class='__input_file__' id='attachUrls' type='file' unit='非必填' err='' name='附件')

            div(class='openWin_btns box_hcc')
                div(class='openWin_btn_gray box_hcc hover' id='cancel') 取消
                div(class='openWin_btn_red box_hcc hover' id='back') 驳回
                div(class='openWin_btn_blue box_hcc hover' id='submit') 提交
