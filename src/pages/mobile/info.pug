doctype html
html
    head
        title 订单详情
        include ./../../pug_include/head

        script(data-src='info.min.js?t='+tt)

        style.
            html,body{overflow: auto;background: #fff;}
            .openWin_btn_gray,
            .openWin_btn_blue{
                width:40%; margin: 0 5%;
            }
            b-title1{
                display: block; width: 100%;
                overflow: hidden;
                background: #eee;
                line-height: 40px;
            }
            #fwxz .openWin_input_item1{
                margin: 10px 0;
            }
            .openWin_input_main{
                padding-right: 0;
            }

    body

        div(class='mobile_logo') 金盾时贷
        div(class='mobile_logo_')


        //warran 权证
        div(class='box_slt hidden' style='background:#fff;' id='warran')
            div(class='mobile_list_item box_slt' id='item')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 姓名：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 电话：
                        a(class='boxflex1')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 业务：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 金额：
                        a(class='boxflex1')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 状态：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 时间：
                        a(class='boxflex1')

            div(class='mobile_btns box_hcc')
                p(id='info') 订单详情
                p(id='history') 历史流程
                a(id='tel' href='tel:12312312312') 联系客户


            div(class='openWin_input_main box_hlt box_lines' id='form')
                div(id='fwxz' style='width:100%;overflow:hidden;')

                b-title1(name='意见')
                div(class='openWin_input_item1')
                    b-input(type='textarea' id='auditOpinion' autoHeight='true' name='意见' placeholder='非必填')
                div(class='openWin_input_item1')
                    b-input-file(class='__input_file__' type='file' id='attachUrls' unit='非必填' name='附件')


            div(class='mobile_btns box_hcc')
                div(class='openWin_btn_gray box_hcc hover' id='close') 关闭
                div(class='openWin_btn_blue box_hcc hover' id='submit') 保存

        //我的业务
        div(class='box_slt hidden' style='background:#fff;' id='myorder')
            div(class='mobile_list_item box_slt' id='item')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 姓名：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 电话：
                        a(class='boxflex1')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 业务：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 金额：
                        a(class='boxflex1')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 状态：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 时间：
                        a(class='boxflex1')

            div(class='mobile_btns box_hcc')
                p(id='info') 订单详情
                p(id='history') 历史流程
                a(id='tel' href='tel:12312312312') 联系客户


            //div(class='mobile_btns box_hcc')
            //    div(class='openWin_btn_gray box_hcc hover' id='close') 关闭


        //草稿箱
        div(class='box_slt hidden' style='background:#fff;' id='draft')
            div(class='mobile_list_item box_slt' id='item')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 姓名：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 金额：
                        a(class='boxflex1')
                div(class='mobile_list_row box_hlc')
                    p(class='mobile_list_row_left box_hcc')
                        span 业务：
                        a(class='boxflex1')
                    p(class='mobile_list_row_right box_hcc')
                        span 时间：
                        a(class='boxflex1')


            div(class='openWin_input_main box_hlt box_lines' id='form')
                div(class='openWin_input_item1')
                    b-input-file(class='__input_file__' type='file' rule='must' id='attachUrls1' name='身份证')
                div(class='openWin_input_item1')
                    b-input-file(class='__input_file__' type='file' rule='must' id='attachUrls2' name='抵押物证件')
                div(class='openWin_input_item1')
                    b-input-file(class='__input_file__' type='file' rule='must' id='attachUrls3' name='其他报告')


            div(class='mobile_btns box_hcc')
                div(class='openWin_btn_gray box_hcc hover' id='close') 关闭
                div(class='openWin_btn_blue box_hcc hover' id='submit1') 保存

        div(class='hidden')
            div(id='room_info_item')
                b-title1(name='')
                div(class='openWin_input_main box_hlt box_lines' group='orderMortgageExtendHouseList')
                    div(class='openWin_input_item1')
                        b-input-money(key='age' accuracy='0' xs='0'  err='输入的数据格式有误' rule='must' name='房龄' unit='年')
                    div(class='openWin_input_item1')
                        b-input(key='direct' type='select' err='输入的数据格式有误' data-bind='houseOrientation' rule='must' name='朝向')
                    div(class='openWin_input_item1')
                        b-input(key='decoration' type='select' err='输入的数据格式有误' data-bind='decorationState' rule='must' name='装修情况')
                    div(class='openWin_input_item1')
                        b-input(key='useCase' type='select' err='输入的数据格式有误' data-bind='houseUseState' rule='must' name='使用情况')
                    div(class='openWin_input_item1')
                        b-input(key='elevator' type='select' err='输入的数据格式有误' data-bind='hasElevator' rule='must' name='有无电梯')
                    div(class='openWin_input_item1')
                        b-input(key='floor' type='text' err='输入的数据格式有误' rule='must' name='总楼层')