doctype html
html
    head
        title 员工信息
        include ./../../pug_include/head_pc

        script(data-src='o_add_staff.min.js?t='+tt)
        style.
            body,html{overflow:auto;}


    body

        div(class='openWin_main')
            div
                div(class='openWin_input_main box_hlt box_lines' id='form')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='账户名' id='userAccount' rule='must' err='不能为空')
                    div(class='openWin_input_item3 mdf_remove')
                        b-input(type='password' name='密码' id='password' rule='must' err='不能为空')
                    div(class='openWin_input_item3 mdf_remove')
                        b-input(type='password' name='密码确认' id='password_' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='员工名' id='userName' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='电话' id='mobile' rule='must,phone' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='select' data-bind='gender' name='性别' id='sex' rule='must' err='不能为空')
                    div(class='openWin_input_item1' id='change_class')
                        b-input(type='text' name='家庭地址' id='address' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='紧急联系人' id='urgentName' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='紧急电话' id='urgentMobile' rule='must,phone' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='select' data-bind='gender' name='性别' id='urgentSex' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input-date(type='date' name='入职日期' id='inductionTime' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='入职次数' id='inductionCount' rule='must,number' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='select' data-bind='company' name='所属公司' data-child='deptId' id='companyId' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='select' data-bind='department' name='所属部门' id='deptId' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='select' data-bind='role' name='拥有角色' id='roleId' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='select' data-bind='education' name='最高学历' id='highestEducation' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='工资卡开户行' id='bankDeposit' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='工资卡卡号' id='payCard' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='社保账号' id='socialAccount' rule='must' err='不能为空')
                    div(class='openWin_input_item3')
                        b-input(type='text' name='公积金账号' id='fundAccount' rule='must' err='不能为空')
                    div(class='openWin_input_item1')
                        b-input-file(type='text' id='userAvatar' name='员工照片' fileType='image' err='只能上传图片')

            div(class='openWin_btns box_hcc')
                div(class='openWin_btn_blue box_hcc hover' id='reset_psd') 重置密码
                div(class='openWin_btn_blue box_hcc hover' id='submit') 提交
